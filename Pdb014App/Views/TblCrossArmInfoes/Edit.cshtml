@model Pdb014App.Models.PDB.PoleModels.TblCrossArmInfo

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <div class="row">
        <div class="offset-md-3 col-md-6 offset-md-3">
            <fieldset>
                <legend>Update Cross Arm </legend>
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="CrossArmId" />
                    <div class="form-group">
                        <label asp-for="Materials" class="control-label"></label>
                        <input asp-for="Materials" class="form-control" />
                        <span asp-validation-for="Materials" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Type" class="control-label"></label>
                        <input asp-for="Type" class="form-control" />
                        <span asp-validation-for="Type" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Standard" class="control-label"></label>
                        <input asp-for="Standard" class="form-control" />
                        <span asp-validation-for="Standard" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="UltimateTensileStrength" class="control-label"></label>
                        <input asp-for="UltimateTensileStrength" class="form-control" />
                        <span asp-validation-for="UltimateTensileStrength" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="TypeOfFittingsId" class="control-label"></label>
                        <select asp-for="TypeOfFittingsId" class="form-control" asp-items="ViewBag.TypeOfFittingsId"></select>
                        <span asp-validation-for="TypeOfFittingsId" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="NoOfSetFittings" class="control-label"></label>
                        <input asp-for="NoOfSetFittings" class="form-control" />
                        <span asp-validation-for="NoOfSetFittings" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="FittingsConditionId" class="control-label"></label>
                        <select asp-for="FittingsConditionId" class="form-control" asp-items="ViewBag.FittingsConditionId"></select>
                        <span asp-validation-for="FittingsConditionId" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="PoleId" class="control-label"></label>
                        <input asp-for="PoleId" class="form-control" readonly/>
                        @*<select asp-for="PoleId" class="form-control" asp-items="ViewBag.PoleId"></select>*@
                        <span asp-validation-for="PoleId" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Create" class="btn btn-success float-right" />
                        <a class="btn btn-success float-left" asp-action="Index" asp-controller="TblPoles">Back</a>
                    </div>
                </form>
            </fieldset>
        </div>
    </div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
