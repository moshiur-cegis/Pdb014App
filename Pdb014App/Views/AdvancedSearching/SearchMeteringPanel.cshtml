                            <th style="width: 350px">Field Value</th>
                            <th style="width: 70px">Join(AND/OR)</th>
                            @*<th style="width: 100px">Action</th>*@
                        </tr>
                    </thead>

                    <tbody>

                        @for (int spc = 0; spc < spCount; ++spc)
