@model IEnumerable<Pdb014App.Models.PDB.Mount_BracketModels.TblSpecificationsOfMountBracket>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Styles {

    <link href="~/css/datastyle.css" rel="stylesheet" />

    <style type="text/css">

        table.table {
            table-layout: fixed;
        }

            table.table tr th,
            table.table tr td {
                border-color: #e9e9e9;
            }

            table.table th {
                min-width: 80px;
            }

                table.table th:last-child {
                    width: 100px;
                }

                table.table th i {
                    font-size: 13px;
                    margin: 0 5px;
                    cursor: pointer;
                }

            table.table td a {
                cursor: pointer;
                display: inline-block;
                margin: 0 5px;
                min-width: 24px;
            }

                table.table td a.add {
                    color: #27C46B;
                }

                table.table td a.edit {
                    color: #FFC107;
                }

                table.table td a.delete {
                    color: #E34724;
                }

            table.table td i {
                font-size: 19px;
            }

            table.table td a.add i {
                font-size: 24px;
                margin-right: -1px;
                position: relative;
                top: 3px;
            }


            table.table .form-control {
                width: 100%;
                padding: 2px 5px;
                line-height: 1.0;
            }

                table.table .form-control.error {
                    border-color: #f50000;
                }

            table.table td .add {
                display: none;
            }
    </style>

}

<h2>List of Specifications of Mount Bracket</h2>
<hr>

<p>
    <a asp-action="Create">Add New</a>
</p>
<div class="row">
    <div class="col-md-12">
        <div class="form-view" id="updatePanel">
            <div id="multi-form-wrapper" class="data-view multi-form-wrapper">
                <table id="multi-form-view" class="table table-responsive multi-form-view">
                    <thead>
                        <tr>
                            <th>
                                @*@Html.DisplayNameFor(model => model.LookUpSpecificationsOfMountBracketType)*@
                                Mount Bracket Type
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.MountBrackeType)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Materials)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.UltimateTensileStrength)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Galvanization)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Standard)
                            </th>
                            <th>
                                @*@Html.DisplayNameFor(model => model.SpecificationsOfMountBracketToPole)*@
                                Pole Id
                            </th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.LookUpSpecificationsOfMountBracketType.SpecificationsOfMountBracketTypeName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.MountBrackeType)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Materials)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.UltimateTensileStrength)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Galvanization)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Standard)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.SpecificationsOfMountBracketToPole.PoleId)
                                </td>
                                <td>
                                    <a asp-action="Edit" asp-route-id="@item.SpecificationsOfMountBracketId">Edit</a>
                                    @*<a asp-action="Details" asp-route-id="@item.SpecificationsOfMountBracketId">Details</a> |
                                        <a asp-action="Delete" asp-route-id="@item.SpecificationsOfMountBracketId">Delete</a>*@
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>

            </div>
        </div>
    </div>
</div>
