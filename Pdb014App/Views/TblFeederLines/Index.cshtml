@*@model IEnumerable<Pdb014App.Models.PDB.TblFeederLine>*@

@model ReflectionIT.Mvc.Paging.PagingList<Pdb014App.Models.PDB.TblFeederLine>
@using ReflectionIT.Mvc.Paging
@addTagHelper *, ReflectionIT.Mvc.Paging

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section Styles {

    <link href="~/css/datastyle.css" rel="stylesheet" />

    <style type="text/css">

        table.table {
            table-layout: fixed;
        }

            table.table tr th,
            table.table tr td {
                border-color: #e9e9e9;
            }

            table.table th {
                min-width: 80px;
            }

                table.table th:last-child {
                    width: 100px;
                }

                table.table th i {
                    font-size: 13px;
                    margin: 0 5px;
                    cursor: pointer;
                }

            table.table td a {
                cursor: pointer;
                display: inline-block;
                margin: 0 5px;
                min-width: 24px;
            }

                table.table td a.add {
                    color: #27C46B;
                }

                table.table td a.edit {
                    color: #FFC107;
                }

                table.table td a.delete {
                    color: #E34724;
                }

            table.table td i {
                font-size: 19px;
            }

            table.table td a.add i {
                font-size: 24px;
                margin-right: -1px;
                position: relative;
                top: 3px;
            }


            table.table .form-control {
                width: 100%;
                padding: 2px 5px;
                line-height: 1.0;
            }

                table.table .form-control.error {
                    border-color: #f50000;
                }

            table.table td .add {
                display: none;
            }
    </style>

}

<div class="container">
    <h2>List of Feeder Line</h2>
    <hr />

    <p>
        <a asp-action="Create">Add New Feeder Line</a>
    </p>
    <div class="row">

        <div class="col-12">
            <div class="float-md-right">
                <form method="get" class="form-inline">
                    <input name="filter" class="form-control" placeholder="filter"
                           value="@Model.RouteValue["Filter"]" />
                    <button type="submit" class="btn btn-info">
                        <span class="glyphicon glyphicon-search" aria-hidden="true"></span> Search
                    </button>
                </form>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="form-view" id="updatePanel">
                <div id="multi-form-wrapper" class="data-view multi-form-wrapper">
                    <table id="multi-form-view" class="table table-responsive multi-form-view">
                        <thead>
                            <tr>

                                <th>
                                    @Html.DisplayNameFor(model => model.FeederLineId)
                                </th>
                                @*<th>
                                        @Html.DisplayNameFor(model => model.FeederLineUId)
                                    </th>*@
                                <th>
                                    @*@Html.DisplayNameFor(model => model.FeederLineType)*@
                                    Feeder Line Type
                                </th>
                                <th>
                                    @*@Html.DisplayNameFor(model => model.FeederLineToRoute)*@

                                    Route Id
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.FeederName)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.NominalVoltage)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.FeederLocation)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.FeederMeterNumber)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.MeterCurrentRating)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.MeterVoltageRating)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.MaximumDemand)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.PeakDemand)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.MaximumLoad)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.SanctionedLoad)
                                </th>
                                @*<th>Action</th>*@
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @*@Html.DisplayFor(modelItem => item.FeederLineId)*@
                                        <a asp-action="Edit" asp-route-id="@item.FeederLineId" class="text-success hover-dark" data-toggle="tooltip" data-placement="top" title="Edit">@Html.DisplayFor(modelItem => item.FeederLineId)</a>
                                    </td>
                                    @*<td>
                                            @Html.DisplayFor(modelItem => item.FeederLineUId)
                                        </td>*@
                                    <td>
                                        @Html.DisplayFor(modelItem => item.FeederLineType.FeederLineTypeName)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.FeederLineToRoute.RouteName)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.FeederName)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.NominalVoltage)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.FeederLocation)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.FeederMeterNumber)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.MeterCurrentRating)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.MeterVoltageRating)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.MaximumDemand)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.PeakDemand)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.MaximumLoad)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.SanctionedLoad)
                                    </td>
                                    @*<td>
                                        <a asp-action="Edit" asp-route-id="@item.FeederLineId">Edit</a>
                                        <a asp-action="Details" asp-route-id="@item.FeederLineId">Details</a> |
                                            <a asp-action="Delete" asp-route-id="@item.FeederLineId">Delete</a>
                                    </td>*@
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<div style="text-align: center;">
    <vc:pager paging-list="@Model" />
</div>