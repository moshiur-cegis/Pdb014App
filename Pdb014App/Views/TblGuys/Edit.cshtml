                    <label asp-for="NoOfSet" class="control-label"></label>
                    <input asp-for="NoOfSet" class="form-control" />
                    <span asp-validation-for="NoOfSet" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="PoleId" class="control-label"></label>
                    <select asp-for="PoleId" class="form-control" asp-items="ViewBag.PoleId"></select>
                    <span asp-validation-for="PoleId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary float-right" />
