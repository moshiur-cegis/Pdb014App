                    <label asp-for="CircleCode" class="control-label"></label>
                    <select asp-for="CircleCode" class="form-control" asp-items="ViewBag.CircleCode"></select>
                    <span asp-validation-for="CircleCode" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-success float-right" />
