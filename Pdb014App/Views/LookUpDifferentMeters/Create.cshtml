<div class="row">
    <div class="offset-md-3 col-md-6 offset-md-3">

        <fieldset>
            <legend>Add Meter </legend>
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="MeterName" class="control-label"></label>
                    <input asp-for="MeterName" class="form-control" />
                    <span asp-validation-for="MeterName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ManufacturersNameandCountry" class="control-label"></label>
                    <input asp-for="ManufacturersNameandCountry" class="form-control" />
                    <span asp-validation-for="ManufacturersNameandCountry" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ManufacturesModelNo" class="control-label"></label>
                    <input asp-for="ManufacturesModelNo" class="form-control" />
                    <span asp-validation-for="ManufacturesModelNo" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="TypeOfMeter" class="control-label"></label>
                    <input asp-for="TypeOfMeter" class="form-control" />
                    <span asp-validation-for="TypeOfMeter" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ClassOfAccuracy" class="control-label"></label>
                    <input asp-for="ClassOfAccuracy" class="form-control" />
                    <span asp-validation-for="ClassOfAccuracy" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="SeparateAmeterforEachPhase" class="control-label"></label>
                    <input asp-for="SeparateAmeterforEachPhase" class="form-control" />
                    <span asp-validation-for="SeparateAmeterforEachPhase" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="MeterTypeId" class="control-label"></label>
                    <select asp-for="MeterTypeId" class="form-control" asp-items="ViewBag.MeterTypeId"></select>
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-success float-right" />
                    <a class="btn btn-success float-left" asp-action="Index">Back</a>
                </div>
            </form>
        </fieldset>
    </div>
</div>

